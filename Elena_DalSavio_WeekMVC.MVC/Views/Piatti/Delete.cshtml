@model PiattoViewModel


<form method="post">
    <p>Sei sicuro di voler eliminare questo piatto?</p>

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" readonly />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descrizione" class="form-label"></label>
        <input asp-for="Descrizione" class="form-control" readonly />
        <span asp-validation-for="Descrizione" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tipologia" class="form-label"></label>
        <input asp-for="Tipologia" class="form-control" readonly />
        <span asp-validation-for="Tipologia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Prezzo" class="form-label"></label>
        <input asp-for="Prezzo" class="form-control" readonly />
        <span asp-validation-for="Prezzo" class="text-danger"></span>
    </div>


    <input type="submit" value="Conferma" class="btn btn-danger" />
    <a class="btn btn-primary" asp-action="Index" role="button">Back</a>
</form>
