@model MenuViewModel


<form method="post">
    <p>Sei sicuro di voler eliminare il menu @Model.MenuPiattiId - @Model.Nome ?</p>

    <div class="form-group">
        <label asp-for="MenuPiattiId"></label>
        <input asp-for="MenuPiattiId" class="form-control" readonly />
        <span asp-validation-for="MenuPiattiId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" readonly />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>


    <input type="submit" value="Conferma" class="btn btn-danger" />
    <a class="btn btn-primary" asp-action="Index" role="button">Back</a>
</form>
